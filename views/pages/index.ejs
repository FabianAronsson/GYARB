  <script>
    $('#signupForm').on('submit',function(e){
      e.preventDefault();
      $('#modal').modal('hide');

      var formData = {
        firstName: $("#inputName").val(),
        lastName: $("#inputLName").val(),
        email: $("#inputEmail").val(),
        address: $("#inputAddress").val(),
        number: $("#inputnumber").val(),
        city: $("#inputCity").val(),
        zipcode: $("#inpuZip").val()
      }

      $.ajax({
        type: "POST",
        url: 'signup',
        data: JSON.stringify(formData),
        success: function(){
          $('#displayModal').modal();
        },
